{
  "compileOnSave": false,
  "compilerOptions": {
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "jszip": [
        "node_modules/jszip/dist/jszip.min.js"
      ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  },
  "include": [
    "./devextreme-angular/dist/ui/**/*.ts",
    "./devextreme/artifacts/angular/renovation/**/*.ts"
  ],
  "exclude": [
    "./devextreme/artifacts/angular/renovation/component_wrapper/**/*.ts",
    "devextreme-angular",
    "devextreme-angular-renovated"
  ]
}